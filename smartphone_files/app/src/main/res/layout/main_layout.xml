<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message to Server\n"
            android:textColor="#000000"
            android:textSize="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="set ip address"
            android:textColorHint="#CCCCCC"
            android:id="@+id/ip_box"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="set port num"
            android:textColorHint="#CCCCCC"
            android:id="@+id/port_box"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type to chat"
            android:textColorHint="#CCCCCC"
            android:id="@+id/chatbox"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textColorHint="#CCCCCC"
                android:id="@+id/num_picker_minute"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="#000000"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textColorHint="#CCCCCC"
                android:id="@+id/num_picker_second"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" . "
                android:textColor="#000000"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textColorHint="#CCCCCC"
                android:id="@+id/num_picker_under"
                android:textColor="@color/black"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send"
                android:id="@+id/msg_send_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send predefined msg"
                android:id="@+id/predefined_button"
                android:background="@color/white"
                android:textColor="#CCCCCC"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show video"
                android:id="@+id/show_video_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hide video"
                android:id="@+id/hide_video_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set video"
                android:id="@+id/set_video_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="display video"
                android:id="@+id/display_video_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set server"
                android:id="@+id/set_server_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play video"
                android:id="@+id/play_video_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pause video"
                android:id="@+id/pause_video_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seek to"
                android:id="@+id/seek_video_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="measure rtt"
                android:id="@+id/rtt_measure"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end server"
                android:id="@+id/end_button"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\ncurrent state of application"
            android:textSize="15dp"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android client socket programming test"
            android:id="@+id/result_text"
            android:textColor="#CCCCCC"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\nDebug Console"
            android:textColor="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/debug_console"
            android:textColor="#CCCCCC"
            android:scrollbars="vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>